<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <compactLayouts>
        <fullName>Volunteer_Initiative_Compact_Layout</fullName>
        <fields>Name</fields>
        <fields>Status</fields>
        <fields>TotalVolunteerHours</fields>
        <fields>AttendanceRate</fields>
        <fields>OpenAssignmentCount</fields>
        <label>Volunteer Initiative Compact Layout</label>
    </compactLayouts>
    <fields>
        <fullName>Default_Duration__c</fullName>
        <externalId>false</externalId>
        <label>Default Duration</label>
        <precision>18</precision>
        <required>false</required>
        <scale>2</scale>
        <trackHistory>false</trackHistory>
        <type>Number</type>
        <unique>false</unique>
    </fields>
    <fields>
        <fullName>External_ID__c</fullName>
        <externalId>true</externalId>
        <label>External ID</label>
        <length>50</length>
        <required>false</required>
        <trackHistory>false</trackHistory>
        <type>Text</type>
        <unique>false</unique>
    </fields>
    <fields>
        <fullName>Volunteer_Signup_URL__c</fullName>
        <description>This formula field is aligned to the Sharing Settings for the Guest user. If the sharing settings are updated this field should also be updated to match to ensure the registration flow works properly.</description>
        <externalId>false</externalId>
        <formula>IF(AND(ISPICKVAL(Status,&apos;In Progress&apos;),IsPublished),HYPERLINK($CustomMetadata.Site_URLs__mdt.Volunteer_Signup.Base_URL__c &amp; &quot;?inputId=&quot; &amp; Id,$CustomMetadata.Site_URLs__mdt.Volunteer_Signup.Base_URL__c &amp; &quot;?inputId=&quot; &amp; Id),&quot;&quot;)</formula>
        <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
        <inlineHelpText>If the &quot;Is Published&quot; checkbox is selected and the Status of the record is &apos;In Progress&apos; then a URL will appear to enable registration for a Job Position and Job Position Shift related to this record.</inlineHelpText>
        <label>Volunteer Signup URL</label>
        <required>false</required>
        <trackHistory>false</trackHistory>
        <type>Text</type>
        <unique>false</unique>
    </fields>
    <listViews>
        <fullName>Open_Volunteer_Initiatives</fullName>
        <columns>Name</columns>
        <columns>StartDate</columns>
        <columns>EndDate</columns>
        <columns>Status</columns>
        <columns>IsPublished</columns>
        <columns>ParentVolunteerInitiative</columns>
        <filterScope>Everything</filterScope>
        <filters>
            <field>Status</field>
            <operation>equals</operation>
            <value>Upcoming,In Progress</value>
        </filters>
        <filters>
            <field>ParentVolunteerInitiative</field>
            <operation>notEqual</operation>
        </filters>
        <label>Open Volunteer Initiatives</label>
    </listViews>
    <validationRules>
        <fullName>Start_Date_and_End_Date</fullName>
        <active>true</active>
        <description>Start Date must be less than or equal to End Date.</description>
        <errorConditionFormula>StartDate  &gt;=  EndDate</errorConditionFormula>
        <errorDisplayField>StartDate</errorDisplayField>
        <errorMessage>Start Date must be less than or equal to End Date.</errorMessage>
    </validationRules>
</CustomObject>
